<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:elevation="30dp"
    android:id="@+id/chat_txt_msg_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_marginStart="2dp"
    android:layout_marginEnd="2dp"
    android:layout_height="wrap_content">


    <RelativeLayout
        android:maxWidth="300dp"
        android:layout_margin="2dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/rl2"
        android:background="@drawable/round_bg_no_stroke_teal700">

        <io.github.ponnamkarthik.richlinkpreview.RichLinkView
            android:id="@+id/richLinkView"
            android:layout_width="300dp"
            android:visibility="gone"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/textMsgTv"
            android:text="HI"
            android:layout_below="@id/richLinkView"
            android:layout_marginStart="7dp"
            android:layout_marginEnd="7dp"
            android:textAlignment="viewStart"
            android:maxWidth="300dp"
            android:autoLink="all"
            android:textColorLink="@color/teal_200"
            android:textSize="16sp"
            android:maxHeight="500dp"
            android:scrollbars="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/msg_time_date_Tv"
            android:layout_below="@id/textMsgTv"
            android:text="30-05-2021  05:30"
            android:textSize="10sp"
            android:layout_marginStart="7dp"
            android:layout_marginEnd="10dp"
            android:layout_width="wrap_content"
            android:maxWidth="250dp"
            android:layout_height="wrap_content"/>

    </RelativeLayout>

</RelativeLayout>