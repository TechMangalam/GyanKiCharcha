<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/chat_image_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:cardElevation="30dp"
    android:layout_margin="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:maxWidth="300dp"
        android:padding="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/rl2"
        android:background="@drawable/round_bg_no_stroke_teal700">

        <ImageView
            android:id="@+id/chat_imgview"
            android:layout_width="290dp"
            android:scaleType="centerCrop"
            android:visibility="visible"
            android:src="@drawable/profile_img"
            android:layout_height="150dp"/>

        <ImageView
            android:id="@+id/chat_video_icon_img_view"
            android:layout_width="290dp"
            android:scaleType="center"
            android:visibility="gone"
            android:src="@drawable/ic_baseline_play_circle_24"
            android:layout_height="150dp"/>

        <ProgressBar
            android:id="@+id/img_progress_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="55dp"
            android:layout_centerHorizontal="true"
            android:progressTint="@color/teal_200"
            android:indeterminateTint="@color/teal_200"
            android:visibility="visible" />

        <TextView
            android:id="@+id/textMsgTv"
            android:layout_below="@id/chat_imgview"
            android:text="HI"
            android:textAlignment="viewStart"
            android:maxWidth="300dp"
            android:textSize="18sp"
            android:autoLink="all"
            android:maxHeight="500dp"
            android:scrollbars="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/msg_time_date_Tv"
            android:layout_below="@id/textMsgTv"
            android:text="30-05-2021  05:30"
            android:textSize="10sp"
            android:layout_marginStart="5dp"
            android:layout_width="wrap_content"
            android:maxWidth="250dp"
            android:layout_height="wrap_content"/>

    </RelativeLayout>



</RelativeLayout>