<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.bitaam.gyankicharcha.ui.MyCourse.MyCourseFragment"
    tools:showIn="@layout/fragment_my_course">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Spinner
            android:elevation="16dp"
            android:background="@drawable/spinner_bg"
            android:spinnerMode="dialog"
            android:popupBackground="@android:color/white"
            android:padding="2dp"
            android:layout_below="@+id/appbar_course"
            android:layout_toStartOf="@+id/searchTv"
            android:id="@+id/spinnerMenu"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="40dp"
            tools:ignore="UnknownIdInLayout" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="@string/large_text" />



    </RelativeLayout>

</androidx.core.widget.NestedScrollView>
